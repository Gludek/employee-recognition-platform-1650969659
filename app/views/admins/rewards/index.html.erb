<div class='title'>Reward</div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% rewards.each do |reward| %>
      <tr>
        <td><%= reward.title %></td>
        <td><%= reward.description %></td>
        <td><%= reward.price %></td>
        <td><%= link_to "Show", admins_reward_path(reward) %></td>
        <td><%= link_to "Edit", edit_admins_reward_path(reward) %></td>
        <td><%= link_to "Destroy", admins_reward_path(reward), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "New Reward", new_admins_reward_path, class: "button is-primary" %>
